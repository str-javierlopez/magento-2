<?xml version="1.0" ?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route method="GET" url="/V1/students/getExams">
        <service class="Hiberus\Lopez\Api\GetApiStudentsExamsInterface" method="getExamsList"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="POST" url="/V1/students/delete">
        <service class="Hiberus\Lopez\Api\GetApiStudentsExamsInterface" method="removeExamById"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
        <data>
            <parameter name="id_exam" force="true">%id_exam%</parameter>
        </data>
    </route>

    <route method="POST" url="/V1/students/addStudentExam">
        <service class="Hiberus\Lopez\Api\GetApiStudentsExamsInterface" method="addStudentExam"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
        <data>
            <parameter name="firstname" force="true">%firstname%</parameter>
            <parameter name="lastname"  force="true">%lastname%</parameter>
            <parameter name="mark"      force="true">%mark%</parameter>
        </data>
    </route>
</routes>
